<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>

		<header>
			<em class="site-title">
				<a href="{{ '/' | url }}">{{ metadata.title }}</a>
			</em>
			{% include "components/nav.njk" %}
		</header>

		<main>
			{{ content | safe }}
		</main>

		{% include "components/footer.njk" %}

		{#- lightGallery library and zoom plugin (must load before initialization) #}
		<script src="/js/lightgallery.umd.js"></script>
		<script src="/js/lg-zoom.umd.js"></script>

		{% js %}
		{% include "assets/js/inline.js" %}
		{% include "assets/js/lightbox-init.js" %}
		{% endjs %}

		<!-- This page `{{ page.url }}` was built on {% currentBuildDate %} -->
		<script type="module" src="{% getBundleFileUrl "js" %}"></script>
	</body>

</html>